# Application
PORT=3001
NODE_ENV=development
APP_NAME=Braves Journal API
LOG_LEVEL=info
DOCS_BASIC_AUTH_USER=admin
DOCS_BASIC_AUTH_PASSWORD=change-me

# Database (Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/braves_journal
DIRECT_URL=postgresql://user:password@localhost:5432/braves_journal

# Supabase Authentication
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Storage (S3/MinIO)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=braves-journal
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_REGION=us-east-1

# OpenAI
OPENAI_API_KEY=sk-your-api-key

# OpenTelemetry
OTEL_SERVICE_NAME=braves-journal-api
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Redis (Rate Limiting)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=60
